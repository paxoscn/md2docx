# Production Environment Configuration
# Copy this file to .env and update values for your environment

# Application Settings
RUST_LOG=info
PORT=3000
HOST=0.0.0.0

# OpenAI API Configuration (required for natural language features)
# OPENAI_API_KEY=your_openai_api_key_here

# File Processing Limits
MAX_FILE_SIZE=104857600  # 100MB in bytes
MAX_BATCH_SIZE=50        # Maximum files in batch processing
UPLOAD_DIR=/app/uploads
OUTPUT_DIR=/app/output

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20
CONVERSION_RATE_LIMIT=10  # Conversions per minute per IP

# Security Settings
CORS_ORIGINS=*  # Set to specific domains in production
API_KEY_REQUIRED=false  # Set to true and configure API keys for production

# Database Configuration (if implementing persistence)
# DATABASE_URL=postgresql://user:password@localhost/md2docx
# REDIS_URL=redis://localhost:6379

# Monitoring and Logging
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true
STRUCTURED_LOGGING=true

# Performance Tuning
WORKER_THREADS=4         # Number of worker threads
MAX_CONNECTIONS=1000     # Maximum concurrent connections
KEEP_ALIVE_TIMEOUT=60    # Keep-alive timeout in seconds
REQUEST_TIMEOUT=300      # Request timeout in seconds

# Memory Management
MAX_MEMORY_USAGE=1073741824  # 1GB in bytes
MEMORY_CHECK_INTERVAL=30     # Memory check interval in seconds

# SSL/TLS Configuration (if terminating SSL at application level)
# SSL_CERT_PATH=/etc/ssl/certs/cert.pem
# SSL_KEY_PATH=/etc/ssl/private/key.pem
# SSL_ENABLED=false

# External Services
# WEBHOOK_URL=https://your-webhook-endpoint.com/notify
# NOTIFICATION_EMAIL=admin@yourdomain.com

# Backup and Cleanup
CLEANUP_TEMP_FILES=true
TEMP_FILE_RETENTION=3600  # Seconds to keep temporary files
AUTO_CLEANUP_INTERVAL=1800  # Cleanup interval in seconds